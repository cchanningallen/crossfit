<%= form_tag sessions_path, class: "form-horizontal", role: "form" do |f| %>

  <div class="form-group">
    <%= label_tag 'email', 'Email', class: "col-lg-2 control-label" %>
    <div class="col-lg-8">
      <%= email_field_tag 'email', 'Email', class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag 'password', 'Password', class: "col-lg-2 control-label" %>
    <div class="col-lg-8">
      <%= password_field_tag 'password', 'Password', class: "form-control" %>
    </div>
  </div>
  <div class="actions col-lg-offset-2 col-lg-8">
    <%= submit_tag "Log In", class: "btn btn-primary" %>
  </div>
<% end %>